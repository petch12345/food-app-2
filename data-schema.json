{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StreetBites Food Order App Data Schema",
  "description": "JSON Schema defining data structures for the StreetBites food ordering application",
  "type": "object",
  "properties": {
    "menuItems": {
      "type": "array",
      "description": "Array of available menu items",
      "items": {
        "$ref": "#/definitions/menuItem"
      }
    },
    "cart": {
      "type": "array",
      "description": "Array of items in the shopping cart",
      "items": {
        "$ref": "#/definitions/cartItem"
      }
    },
    "order": {
      "$ref": "#/definitions/order"
    }
  },
  "definitions": {
    "menuItem": {
      "type": "object",
      "description": "A food item available for order",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the menu item"
        },
        "name": {
          "type": "string",
          "description": "Display name of the food item"
        },
        "price": {
          "type": "number",
          "description": "Price of the item in USD",
          "minimum": 0
        },
        "description": {
          "type": "string",
          "description": "Brief description of the food item"
        },
        "image": {
          "type": "string",
          "description": "URL or path to the item's image",
          "format": "uri"
        }
      },
      "required": ["id", "name", "price"]
    },
    "cartItem": {
      "type": "object",
      "description": "An item in the shopping cart with quantity",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier matching the menu item"
        },
        "name": {
          "type": "string",
          "description": "Display name of the food item"
        },
        "price": {
          "type": "number",
          "description": "Price per unit in USD",
          "minimum": 0
        },
        "quantity": {
          "type": "integer",
          "description": "Number of this item in the cart",
          "minimum": 1
        }
      },
      "required": ["id", "name", "price", "quantity"]
    },
    "order": {
      "type": "object",
      "description": "Complete order information",
      "properties": {
        "items": {
          "type": "array",
          "description": "Array of cart items in the order",
          "items": {
            "$ref": "#/definitions/cartItem"
          }
        },
        "subtotal": {
          "type": "number",
          "description": "Sum of all item prices before fees",
          "minimum": 0
        },
        "deliveryFee": {
          "type": "number",
          "description": "Fixed delivery fee in USD",
          "minimum": 0
        },
        "total": {
          "type": "number",
          "description": "Final total including fees",
          "minimum": 0
        }
      },
      "required": ["items", "subtotal", "deliveryFee", "total"]
    }
  }
}
